package week6

object nqueens {
	def queens(n: Int): Set[List[Int]] = {
	  def placeQueens(k: Int): Set[List[Int]] = 
	    if(k == 0) Set(List())
	    else
	      for {
	        queens <- placeQueens(k - 1)
	        col <- 0 until n
	        if isSafe(col, queens)
	      } yield col :: queens
	      
	  placeQueens(n)
	}
	
	/**
	 * isSafe - returns true if the column is safe to put a queen in the queens.length row
	 * 
	 * ---------------------    ---------------------  
	 * |4QS| 0 | 1 | 2 | 3 |    |4QS| 0 | 1 | 2 | 3 |
	 * ---------------------    ---------------------
	 * | 0 |   | Q |   |   |    | 0 | 0 | 1 | 2 | 3 |
	 * ---------------------    ---------------------
	 * | 1 |   |   |   | Q |    | 0 | 0 | 1 | 2 | 3 |
	 * ---------------------    ---------------------
	 * | 2 | Q |   |   |   |    | 0 | 0 | 1 | 2 | 3 |
	 * ---------------------    ---------------------
	 * | 3 |   |   | ? |   |    | 0 | 0 | 1 | 2 | 3 |
	 * ---------------------    ---------------------
	 * In this example:
	 * col = 3 (implicitly row = 4 -> (r, c) = (4, 3)
	 * queens = List(2, 0, 1) 
	 * 
	 * We need to insure that
	 *  - no Q in same col (aka col is not in queens)
	 *  - no Q in same row (given)
	 *  - no Q in diagonal
	 *    + 
	 * 
	 */
	def isSafe(col: Int, queens: List[Int]): Boolean = 
	  !queens.contains(col) &&
	  (for {
	    r <- (1 until queens.length)
	    if (queens(r) == col && 
	  } yield 1).isEmpty
	  
}