package week4

abstract class Nat {
  def isZero: Boolean
  def predecessor: Nat
  def successor: Nat
  def + (that: Nat): Nat
  def - (that: Nat): Nat
}

class Succ(n: Nat) extends Nat {
	def isZero = false
	def predecessor = n
	def successor = null
	def + (that: Nat) = null
  def - (that: Nat) = null
}

object Zero extends Nat {
	def isZero = true
	def predecessor = throw new NoSuchElementException("predecessor of zero")
	def successor = 1
	def + (that: Nat) = null
	def - (that: Nat) = null
}

object Main extends App {
	println(Zero)
}